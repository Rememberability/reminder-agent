!!! html
%html
  %head
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1" }
    %title ReminderAgent
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags

  %body.container
    %p.notice= notice
    %p.alert= alert

    = yield
